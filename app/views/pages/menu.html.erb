        </div>
        <div class="card-action center-align">
          <%= link_to "Carry Out Menu", asset_path("GoodwoodCarryoutMenu.pdf"), class: 'red-text text-darken-4' %>
          <%= link_to "Catering Menu", asset_path("GoodwoodCateringMenu.pdf"), class: 'red-text text-darken-4' %>
